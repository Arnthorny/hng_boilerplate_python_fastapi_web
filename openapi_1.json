{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "HNG Boilerplate API",
    "description": "API Boilerplate for HNG Task"
  },
  "servers": [
    {
      "url": "http://127.0.0.1"
    }
  ],
  "paths": {
    "/api/payments": {
      "get": {
        "summary": "Gets all payments made by user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "All payments were returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Payment"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "post": {
        "summary": "Creates a payment record",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentPost"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Payment record created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Payment"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/api/payments/{payment_id}": {
      "parameters": [
        {
          "name": "payment_id",
          "description": "The unique identifier of a payment record",
          "in": "path",
          "required": true,
          "schema": {
            "$ref": "#/components/schemas/PaymentId"
          }
        }
      ],
      "get": {
        "summary": "Gets a Single Payment",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Single payment object was returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Payment"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      },
      "delete": {
        "summary": "Delete a payment record",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Payment record deleted successfully"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    },
    "/api/payments-providers": {
      "get": {
        "summary": "Gets all payment providers available",
        "security": [],
        "responses": {
          "200": {
            "description": "All providers were returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Provider"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/payments-providers/{provider_id}": {
      "parameters": [
        {
          "name": "provider_id",
          "description": "The unique identifier of a payment provider",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Gets a single payment provider",
        "security": [],
        "responses": {
          "200": {
            "description": "Single provider object was returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Provider"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PaymentId": {
        "description": "The unique identifier of a payment",
        "type": "string"
      },
      "Payment": {
        "type": "object",
        "required": [
          "id",
          "amount",
          "currency",
          "status",
          "createdAt"
        ],
        "properties": {
          "id": {
            "$ref": "#/components/schemas/PaymentId"
          },
          "amount": {
            "type": "integer"
          },
          "currency": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "PaymentPost": {
        "type": "object",
        "required": [
          "amount",
          "currency",
          "status"
        ],
        "properties": {
          "amount": {
            "type": "integer"
          },
          "currency": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "createdAt": {
            "type": "string"
          }
        }
      },
      "Provider": {
        "type": "object",
        "required": [
          "provider_id",
          "provider_name"
        ],
        "properties": {
          "provider_id": {
            "type": "string"
          },
          "provider_name": {
            "type": "string"
          }
        }
      },
      "Error404": {
        "type": "object",
        "properties": {
          "message": {
            "description": "Not found",
            "type": "string"
          },
          "code": {
            "type": "integer"
          }
        }
      },
      "Error401": {
        "type": "object",
        "properties": {
          "message": {
            "description": "Authentication failure",
            "type": "string"
          },
          "code": {
            "type": "integer"
          }
        }
      },
      "Error400": {
        "type": "object",
        "properties": {
          "message": {
            "description": "Malformed request",
            "type": "string"
          },
          "code": {
            "type": "integer"
          }
        }
      }
    },
    "responses": {
      "Unauthorized": {
        "description": "Request requires authentication",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error401"
            }
          }
        }
      },
      "NotFound": {
        "description": "Required resource not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error404"
            }
          }
        }
      },
      "BadRequest": {
        "description": "Request malformed",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error400"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ]
}